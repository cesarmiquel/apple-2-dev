!cpu 6502

           *= $a0 ; ORG = $A0

; =====================================
; PAGE ZERO
PTRFG               = $a1       ; reuse beginning of code
PTRBG               = $9f

!zone
            jsr $f832           ; clear screen
            sta $C050           ; Lowres gfx
.start
            iny
            bmi .start          ; skip from 128-255
            bne +

            dec+1 PTRFG
            inc+1 PTRBG
            bne .blit
            inx

+
            lda (PTRFG),y
            ror
            bcc +
            lda #$ff
            bne .blit
+           lda (PTRBG),y
            and #%00000001
            beq .blit
            txa
            and #%00000011
            tax
            lda+1 COLORS,x
.blit
            sta $480,y
            sta $500,y
            sta $580,y
            sta $600,y

.delay
            lda #$8
            jsr $fca8

            bcs .start

COLORS  !byte $33,$11,$bb,$55
